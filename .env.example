# PM Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
# Dashboard: https://app.supabase.io → Project → Settings → API

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# CLOUDFLARE CONFIGURATION (Optional)
# ============================================
# Only needed if using Cloudflare Workers backend

# D1 Database ID from Cloudflare dashboard
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id

# Account ID for Wrangler
CLOUDFLARE_ACCOUNT_ID=your-account-id

# API Token with Workers access
CLOUDFLARE_API_TOKEN=your-api-token

# ============================================
# OPENAI CONFIGURATION
# ============================================
# Required for AI-powered copy checking feature

OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# For sending notification emails

SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# ============================================
# APPLICATION SETTINGS
# ============================================

# Organization branding
ORG_NAME="Your Organization"
ORG_DOMAIN=yourdomain.com
LOGO_URL=https://yourdomain.com/logo.png

# Feature flags (true/false)
FEATURE_CALENDAR=true
FEATURE_KANBAN=true
FEATURE_APPROVALS=true
FEATURE_IDEAS=true
FEATURE_LINKEDIN=true
FEATURE_TESTING=true
FEATURE_COPY_CHECK=true
FEATURE_ACTIVITY_LOG=true
